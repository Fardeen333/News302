<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <EditText
        android:id="@+id/edenterphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="16dp"
        android:hint="Enter your phone number"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="192dp"

        android:alpha="0.9"
        android:background="@drawable/back_white_roundborder"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:background="@drawable/back_white_roundborder"
        android:elevation="8dp"
        android:fontFamily="@font/comr"
        android:hint="Enter OTP Here"
        android:padding="13dp"
        android:textColor="@color/color_grey_dark"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edenterphone"></EditText>

    <TextView
        android:id="@+id/tvtimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/comr"
        android:text="00"
        android:textColor="@color/color_grey"
        android:textSize="42dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edotp"></TextView>

    <TextView
        android:id="@+id/tvoptinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comr"
        android:text="OTP will arrive shortly"
        android:textColor="@color/color_grey"
        android:textSize="12dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtimer"></TextView>

    <Button
        android:id="@+id/bverifyotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back_ripple_roundfull_green"
        android:enabled="false"
        android:paddingHorizontal="28dp"
        android:text="Verify OTP"
        android:textColor="@color/color_white"
        android:textSize="12dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvoptinfo"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/bresendotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_back_ripple_round"
        android:paddingHorizontal="20dp"
        android:text="send OTP"
        android:textAllCaps="false"
        android:enabled="false"
        android:textColor="@color/color_white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bproceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_back_ripple_round_3"
        android:paddingHorizontal="20dp"
        android:text="Proceed"
        android:visibility="gone"
        android:enabled="false"
        android:textColor="@color/color_white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>